@model InternalBookingSystem.Models.Resource
@{
    ViewData["Title"] = "Create Resource";
}
<div class="container-fluid">
    <!-- Header -->
    <div class="resource-header">
        <h1>Create Resource</h1>
        <div class="subtitle">Add a New Resource to the System</div>
    </div>

    <!-- Form -->
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" required placeholder="Enter resource name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" required placeholder="Enter resource description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" required placeholder="Enter resource location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Capacity" class="control-label"></label>
                    <input asp-for="Capacity" class="form-control" type="number" min="1" placeholder="Enter capacity" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                    </label>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}